#: import view python_view
#: import controller recipes_controller
#: import ListAdapter kivy.adapters.listadapter.ListAdapter
#: import ListItemButton kivy.uix.listview.ListItemButton

<Controller>
    #lbl: button_status


    AnchorLayout:
        size: 300, 300
        anchor_x: "left"
        anchor_y: "top"
        padding: 50, 40, 100, 40

        TextInput:
            multiline: False
            hint_text: "Search"
            anchor_x: "left"
            anchor_y: "top"
            size_hint: .9, None
            height: 20
            width: 400

        Label:
            id: button_status
            text: "label"
            size_hint: .5, .1
            #pos_hint: {"x": .2, "y": .9}
            color: 2, 188, 100, 1
            background_color: .1, .2, .3, 1
            background_normal: ''
            #pos_hint: {"x": 1, "y": 0}
            #size_hint: .1, .1
        Button:
            text: "Search"
            #pos_hint: {"x": .8, "y": .9}
            size_hint: None, None
            width: 80
            height: 30
            on_press: root.print_table()


<CustListBut@ListItemButton>
    size_hint: None, None
    size: 30, 30

<HomeScreen>
    BoxLayout:
        orientation: "horizontal"
        #size_hint: 1, None
        #height: 800
        padding: 10
        spacing: 10

        recipe_list: all_recipes_listview

        Button:
            text: "Recipe Home"
            size_hint: .1, .1
            pos_hint: {"top": 1}

        BoxLayout:
            orientation: "vertical"

            Label:
                text: "     All Recipes"
                font_size: 30
                size_hint: None, None
                size: self.texture_size
                pos_hint: {"top": 1}

            ListView:
                id: all_recipes_listview
                ident: "recipe"
                adapter:
                    ListAdapter(data=["recipes"], cls=view.RecipeListButton)




<CategoryTagLabel@Label>
    size_hint: None, None
    size: self.texture_size
    pos_hint: {"top": 1}


<RecipeViewScreen>
    BoxLayout:

        ScrollView:
            id: recipe_screen_scrlv

            BoxLayout:
                orientation: "horizontal"
                size_hint: 1, None
                height: 800
                padding: 10

                Button:
                    text: "Recipe Home"
                    size_hint: .1, .1
                    pos_hint: {"top": 1}

                GridLayout:
                    rows: 3
                    padding: 10
                    spacing: 10
                    size_hint: .9, None
                    height: 800

                    BoxLayout:
                        orientation: "horizontal"
                        spacing: 10
                        padding: 10
                        size_hint: 1, None
                        height: 30

                        Button:
                            text: "Edit Recipe"
                            pos_hint: {"top": 1}
                            size_hint: None, None
                            width: 85
                            height: 30

                        Label:
                            text: "Recipe Name"
                            font_size: 21
                            size_hint: None, None
                            size: self.texture_size
                            pos_hint: {"top": 1}


                    BoxLayout:
                        orientation: "horizontal"
                        size_hint: 1, None
                        height: 128
                        pos_hint: {"y": 1}
                        spacing: 10
                        padding: 10

                        Button:
                            text: "Recipe\nPicture"
                            markup: "true"
                            size_hint: None, None
                            size: 85, 85
                            pos_hint: {"top": 1}

                        BoxLayout:
                            pos_hint: {"top": 1}
                            orientation: "vertical"
                            size_hint: None, None
                            size: 200, 128
                            padding: 5
                            spacing: 2
                            size_hint_x: .5
                            canvas:
                                Color:
                                    rgba: 150/255, 150/255, 150/255, 1
                                Rectangle:
                                    pos: self.pos
                                    size: self.size

                            CategoryTagLabel:
                                text: "Category: "
                            CategoryTagLabel:
                                text: "Meal: "
                            CategoryTagLabel:
                                text: "Prep Time: "
                            CategoryTagLabel:
                                text: "Difficulty: "
                            CategoryTagLabel:
                                text: "Price: "
                            CategoryTagLabel:
                                text: "Ethnicity: "

                    #BoxLayout:
                        #pos_hint: {"y": 0}
                    #    orientation: "vertical"
                    #    spacing: 10

                    #GridLayout:
                    #    rows: 2
                    #    size_hint: 1, None
                        #height: self.minimum_height

                    BoxLayout
                        orientation: "vertical"
                        pos_hint: {"y": 1}
                        id: "ing_ins"
                        padding: 10


                        Label
                            text: "[b]Ingredients:[/b]\n"
                            size_hint: (None, None)
                            size: self.texture_size
                            halign: "left"
                            markup: True

                        Label:
                            text: "Beans\nGreeens\nTomatoes\nPotatoes\nwheat\nmilk\na\nb\nc\nd\ne\nf\ng\nh\ni\nj\nk\nl\nm\nn\no\np"
                            size_hint: None, None
                            size: self.texture_size
                            halign: "left"
                            valign: "top"
                            markup: True

                    #GridLayout

                        #rows: 2
                        #size_hint: 1,None
                        #height: self.minimum_height

                        Label
                            text: "[b]Instructions:[/b]\n"
                            size_hint: (None, None)
                            size: self.texture_size
                            halign: "left"
                            valign: "top"
                            markup: True


                        Label:
                            text: "1) Boil water\n2) Let it cool"
                            size_hint: None, None
                            size: self.texture_size
                            halign: "left"
                            markup: True


