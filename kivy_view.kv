<RV>:
    viewclass: 'SelectableLabel'
    SelectableRecycleBoxLayout:
        default_size: None, dp(56)
        #This can be used to center the text in the available space
        #default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'


<SelectableLabel>:
    # Draw a background to indicate selection
    canvas.before:
        Color:
            rgba: (.0, 0.9, .1, .3) if self.selected else (0, 0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size


<HomeScreen>
    BoxLayout:
        orientation: "horizontal"
        padding: 10
        spacing: 10

        FloatLayout:
            size_hint: None, None
            size: 200, 500
            pos_hint: {"x": 0, "top": 1}

            Button:
                text: "Recipe Home"
                size_hint: None, None
                size: 100, 50
                pos_hint: { "x": 0, "top": 1}
                on_press: root.manager.current = 'recipeView'

            BoxLayout:
                orientation: "vertical"
                size_hint: None, None
                size: 200, 400
                pos_hint: {"x": 0, "top": .88}

                canvas:
                    Color:
                        rgba: 150/255, 150/255, 150/255, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size

        BoxLayout:
            orientation: "vertical"

            Label:
                text: "     All Recipes "
                font_size: 30
                size_hint: None, None
                size: self.texture_size
                pos_hint: {"top": 1}

            RV:

            RecycleBoxLayout:
                default_size: None, dp(56)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'




<CategoryTagLabel@Label>
    size_hint: None, None
    size: self.texture_size
    pos_hint: {"top": 1}


